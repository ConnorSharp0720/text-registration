<section class="section">
<div class="has-text-centered box">
<h1 class="title">Pricing</h1>
<h2 class="subtitle">Choose the plan that best fits your text consistency and budget.</h2>

<div class="pricing-table">
  <div class="pricing-plan is-warning">
    <div class="plan-header">Trial</div>
    <div class="plan-price"><span class="plan-price-amount"><span class="plan-price-currency"></span>FREE</span>/month</div>
    <div class="plan-items">
      <div class="plan-item">100 Texts</div>
      <div class="plan-item">1 Phone Number</div>
      <div class="plan-item">-Feature-</div>
      <div class="plan-item">-Feature-</div>
    </div>
    <div class="plan-footer">
        <% if user_signed_in? %>
            <%= link_to 'Subscribe', new_subscription_path(plan: "trial", plan_id: Rails.application.credentials.trial), class:"button is-fullwidth" %>
        <% else %> 
            <%= link_to 'Subscribe', new_user_registration_path, class: 'button is-fullwidth' %>
        <% end %>
    </div>
  </div>

  <div class="pricing-plan is-active">
    <div class="plan-header">Entry</div>
    <div class="plan-price"><span class="plan-price-amount"><span class="plan-price-currency">$</span>5</span>/month</div>
    <div class="plan-items">
      <div class="plan-item">1000 Texts</div>
      <div class="plan-item">2 Phone Numbers</div>
      <div class="plan-item">-Feature-</div>
      <div class="plan-item">-Feature-</div>
    </div>
    <div class="plan-footer">
      <% if user_signed_in? %>
            <%= link_to 'Subscribe', new_subscription_path(plan: "entry", plan_id: Rails.application.credentials.entry), class:"button is-fullwidth" %>
        <% else %> 
            <%= link_to 'Subscribe', new_user_registration_path, class: 'button is-fullwidth' %>
        <% end %>
    </div>
  </div>

  <div class="pricing-plan is-danger">
    <div class="plan-header">Expert</div>
    <div class="plan-price"><span class="plan-price-amount"><span class="plan-price-currency">$</span>15</span>/month</div>
    <div class="plan-items">
      <div class="plan-item">5000 Texts</div>
      <div class="plan-item">3 Phone Numbers</div>
      <div class="plan-item">-Feature-</div>
      <div class="plan-item">-Feature-</div>
    </div>
    <div class="plan-footer">
      <% if user_signed_in? %>
            <%= link_to 'Subscribe', new_subscription_path(plan: "expert", plan_id: Rails.application.credentials.expert), class:"button is-fullwidth" %>
        <% else %> 
            <%= link_to 'Subscribe', new_user_registration_path, class: 'button is-fullwidth' %>
        <% end %>
    </div>
  </div>
</div>
</div>
</section>